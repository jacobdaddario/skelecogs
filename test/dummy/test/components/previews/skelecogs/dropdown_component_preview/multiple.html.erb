<h1 id="alternate-target" class="text-2xl">
  Browse clothes
</h1>
<div class="flex items-center mt-8">
  <%= render Skelecogs::DropdownComponent.new(class:"relative", reveal_with: "hidden") do |c| %>
    <%= c.button(class: "flex items-center py-1.5 px-3 rounded-md bg-white text-indigo-600 shadow border border-gray-200 text-lg hover:bg-gray-50 focus:outline-none focus:ring focus:border-indigo-400 focus:ring-indigo-300") do %>
      Colors
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 ml-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
      </svg>
    <% end %>
    <%= c.items_container(class: "z-50 absolute flex flex-col items-stretch border bg-white border-gray-300 transition-all duration-100 ease-in-out shadow rounded-lg py-2 mt-1.5 px-3 w-48") do |container| %>
      <% %w[Red Orange Green Blue].each do |color| %>
        <%= container.item class: "w-full flex items-center" do %>
          <%= check_box_tag color, 1, false, class: "focus:ring-indigo-500 h-5 w-5 text-indigo-600 border-gray-300 rounded" %>
          <%= label_tag color, color, class: "text-gray-900 text-lg ml-4" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

  <%= render Skelecogs::DropdownComponent.new(class:"relative ml-8", reveal_with: "hidden") do |c| %>
    <%= c.button(class: "flex items-center py-1.5 px-3 rounded-md bg-white text-indigo-600 shadow border border-gray-200 text-lg hover:bg-gray-50 focus:outline-none focus:ring focus:border-indigo-400 focus:ring-indigo-300") do %>
      Sizes
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 ml-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
      </svg>
    <% end %>
    <%= c.items_container(class: "z-50 absolute flex flex-col items-stretch border bg-white border-gray-300 transition-all duration-100 ease-in-out shadow rounded-lg py-2 mt-1.5 px-3 w-48") do |container| %>
      <% %w[SM MD LG XL].each do |size| %>
        <%= container.item class: "w-full flex items-center" do %>
          <%= check_box_tag size, 1, false, class: "focus:ring-indigo-500 h-5 w-5 text-indigo-600 border-gray-300 rounded" %>
          <%= label_tag size, size, class: "text-gray-900 text-lg ml-4" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <button class="py-1.5 px-3 ml-8 w-24 rounded-md text-white bg-indigo-600 text-lg hover:bg-indigo-500 focus:outline-none focus:ring focus:ring-indigo-300">
    Filter
  </button>
</div>
