<h1 id="alternate-target" class="text-2xl">
  Add groceries
</h1>

<%= render Skelecogs::DropdownComponent.new(class:"relative mt-8", reveal_with: "hidden") do |c| %>
  <%= c.button(class: "flex items-center py-1.5 px-3 rounded-md bg-red-600 text-white text-lg hover:bg-red-500 focus:outline-none focus:ring focus:ring-red-300") do %>
    Groceries
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 ml-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
    </svg>
  <% end %>
  <%= c.items_container(class: "z-50 absolute flex flex-col items-stretch border bg-white border-gray-300 transition-all duration-100 ease-in-out shadow rounded-lg py-2 mt-1.5 px-1.5 w-64") do |container| %>
    <% %w[Eggs Cheese Milk].each do |food| %>
      <%= container.item(as: :a, href: "##{food}", class: "inline-block h-full w-full bg-white px-3 py-1.5 my-1 text-gray-900 rounded-md hover:bg-red-600 hover:text-white focus:bg-red-600 focus:text-white focus:outline-none disabled:bg-gray-50 disabled:text-gray-700") do %>
        <%= food %>
      <% end %>
    <% end %>
    <%= container.item(as: :a, href: "#banana", disabled: true, class: "inline-block cursor-not-allowed h-full w-full px-3 py-1.5 my-1 bg-gray-100 text-gray-500 rounded-md focus:bg-red-600 focus:outline-none") do %>
      Banana
    <% end %>
    <%= container.item(as: :div, disabled: true, onclick: "window.location.href+='#Checkout'", class: "pointer-events-none inline-block h-full w-full my-1") do %>
      <%= button_tag "Checkout", action: "#checkout", class: "px-2.5 py-1.5 w-full rounded-md bg-gray-100 text-gray-500 cursor-not-allowed focus:bg-red-600 focus:outline-none" %>
    <% end %>
  <% end %>
<% end %>
